<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_detail">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:id="@+id/detailImageProduct"
        android:scaleType="centerInside"
        android:background="@drawable/gray_gradient" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp" android:layout_gravity="bottom">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailTextViewPrice"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:fontFamily="monospace"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailTextViewName"
            android:textSize="22sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailTextViewDescription"
            android:textSize="18sp" />

        <Button
            android:text="Comprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailButtonComprar"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary" android:textColor="@color/white" android:elevation="5dp" />

    </LinearLayout>


</LinearLayout>