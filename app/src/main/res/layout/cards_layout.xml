<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/opcoes_card_view"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        card_view:cardElevation="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageViewProduct"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/gray_gradient" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailTextViewPrice"
                android:layout_below="@+id/imageViewProduct"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailTextViewName"
                android:layout_below="@+id/detailTextViewPrice"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textSize="16sp" />



            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDescription"
                android:layout_below="@+id/detailTextViewName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>