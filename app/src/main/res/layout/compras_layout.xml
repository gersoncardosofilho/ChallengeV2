<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" android:id="+id/compras_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compras_cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/compras_product_image_view"
                android:scaleType="centerInside"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/compras_product_image_view"
                android:layout_marginLeft="10dp" android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número da Transação:" android:textSize="12sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/compras_idPayment_textView"
                    android:textStyle="bold"
                    android:textSize="14dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: " />


                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/compras_product_value_TextView" android:textStyle="bold"

                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="Nome: " android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="12dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/compras_product_name_textView" android:textSize="14dp" android:textStyle="bold"
                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:text="@string/cancelar_compra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/compras_cancela_compra_button"
                    android:backgroundTint="@color/danger" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>