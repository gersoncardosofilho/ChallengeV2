<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_marginEnd="16dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/opcoes_card_view"
        android:layout_height="wrap_content"
        android:layout_width="180dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                card_view:srcCompat="@drawable/gray_gradient"
                android:background="@drawable/gray_gradient"
                android:id="@+id/imageViewProduct"
                android:layout_height="150dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewProduct"
                android:textColor="@color/colorAccent"
                android:id="@+id/detailTextViewPrice"
                card_view:layout_constraintRight_toRightOf="@+id/imageViewProduct"
                card_view:layout_constraintLeft_toLeftOf="@+id/imageViewProduct"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintTop_toBottomOf="@+id/imageViewProduct" android:textSize="20sp" android:textStyle="bold|italic" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailTextViewName"
                card_view:layout_constraintLeft_toLeftOf="@+id/imageViewProduct"
                card_view:layout_constraintRight_toRightOf="@+id/imageViewProduct"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintTop_toBottomOf="@+id/detailTextViewPrice" />

            <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDescription"
                card_view:layout_constraintTop_toBottomOf="@+id/detailTextViewName"
                card_view:layout_constraintRight_toRightOf="@+id/imageViewProduct"
                card_view:layout_constraintLeft_toLeftOf="@+id/imageViewProduct"
                card_view:layout_constraintHorizontal_bias="0.0"
                android:textAlignment="viewStart" android:gravity="start"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>