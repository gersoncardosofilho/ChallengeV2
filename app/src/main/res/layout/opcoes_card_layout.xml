<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/opcoes_image_view"
                android:contentDescription=""
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/opcoes_image_view"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/opcoes_line"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcoes_product_price"
                android:layout_below="@+id/opcoes_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcoes_product_name"
                android:layout_below="@+id/opcoes_product_price" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcoes_product_description"
                android:layout_below="@id/opcoes_product_name" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>