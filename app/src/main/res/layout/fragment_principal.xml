<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/fragment_opcoes"
        class="gersondeveloper.com.br.challengev2.Fragment.OpcoesFragment"
        tools:layout="@layout/fragment_opcoes" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/fragment_botoes"
        class="gersondeveloper.com.br.challengev2.Fragment.BotoesFragment"
        tools:layout="@layout/fragment_opcoes" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/fragment_cards"
        class="gersondeveloper.com.br.challengev2.Fragment.CardsFragment"
        tools:layout="@layout/fragment_opcoes" />



</LinearLayout>